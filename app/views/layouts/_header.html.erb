<header>
  <nav class="bg-white px-8">
    <div class="min-w-full mx-auto">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <a href="/" class="text-gray-500 text-2xl tracking-tighter items-center px-1 pt-1 font-bold">TourneyChamp</a>
          </div>
          <% if current_user&.has_role?(:admin) %>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a href="/admin" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"> Admin</a>
            </div>
          <% end %>
        </div>
        <div class="ml-6 flex items-center">
          <% if current_user %>
          <div class="ml-3 relative">
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="w-[40px] aspect-square rounded-[50%] flex justify-center items-center text-sm border-2 border-indigo-700 text-indigo-700 bg-indigo-100 hover:bg-indigo-200"><%= current_user.initials %></label>
              <ul tabindex="0" class="menu dropdown-content p-2 shadow-xl bg-base-100 rounded-[5px] mt-4 border-2 border-indigo-100">
                <li class="text-xs p-2 pb-0 font-bold">Logged in as:</li>
                <li class="text-sm p-2 pt-0"><%= current_user.email %></li>
                <hr>
                <%= button_to 'Sign Out', destroy_user_session_path, :method => :delete, class: 'hover:bg-indigo-100 border-transparent text-indigo-700 inline-flex items-center p-2 w-full flex justify-end' %>
              </ul>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </nav>
</header>