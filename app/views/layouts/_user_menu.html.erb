<div>
  <h3 class="px-3 text-sm font-medium text-gray-500">Logged in as:</h3>
  <p class="px-3 text-sm text-gray-900"><%= current_user.email %></p>

  <div class="mt-3 space-y-1">
    <%= link_to "Profile", profile_path, class: "block px-3 py-2 text-base font-medium text-gray-900 hover:bg-gray-100" %>
    
    <% unless current_user.is_admin? %>
      <%= link_to "Account", subscription_path, class: "block px-3 py-2 text-base font-medium text-gray-900 hover:bg-gray-100" %>
    <% end %>
    
    <%= link_to "Sign Out", destroy_user_session_path, 
        data: { turbo_method: :delete }, 
        class: "block px-3 py-2 text-base font-medium text-gray-900 hover:bg-gray-100" %>
  </div>
</div> 