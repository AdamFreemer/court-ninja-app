<td class="px-2 py-4 whitespace-nowrap text-left text-sm font-medium">
  <% if tournament.rounds_configured.include?(1) %>
    <a href="<%= display_path(tournament.id, 1) %>" target="_blank">
      <button 
        class="text-md py-0.5 px-5 text-md font-medium text-black focus:outline-none bg-white rounded-lg border-2 border-black hover:bg-gray-100 hover:text-black focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-blue-700 dark:border-gray-600 dark:hover:text-black dark:hover:bg-gray-200">
        Court <%= tournament.courts > 1 ? 1 : "1" %>
      </button>
    </a>
  <% end %>
</td>
<td class="px-2 py-4 whitespace-nowrap text-left text-sm font-medium">
  <% if tournament.courts == 2 %>
    <a href="<%= display_path(tournament.id, 2) %>" target="_blank">
      <button 
        class="text-md py-0.5 px-5 text-md font-medium text-black focus:outline-none bg-white rounded-lg border-2 border-black hover:bg-gray-100 hover:text-black focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-blue-700 dark:border-gray-600 dark:hover:text-black dark:hover:bg-gray-200">
        Court 2
      </button>
    </a>
  <% end %>
</td>
<td class="px-2 py-4 whitespace-nowrap text-left text-sm font-medium">
  <% if tournament.rounds_finalized.include?(tournament.rounds_configured.last.to_i) %>
    <a href="<%= results_tournament_path(tournament.id) %>" target="_blank">
      <button 
        class="text-md py-0.5 px-5 mr-2 text-md font-medium text-green-700 focus:outline-none bg-white rounded-full border-2 border-green-700 hover:bg-gray-100 hover:text-green-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-green-700 dark:border-gray-600 dark:hover:text-black dark:hover:bg-gray-200">
        Results
      </button>
    </a>
  <% end %>
</td>
<td class="px-2 py-4 whitespace-nowrap text-left text-sm font-medium">
  <a href="<%= edit_tournament_path(tournament.id) %>">
    <button 
      class="text-md py-0.5 px-5 text-md font-medium text-red-700 focus:outline-none bg-white rounded-full border-2 border-red-700 hover:bg-gray-100 hover:text-red-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-red-700 dark:border-gray-600 dark:hover:text-black dark:hover:bg-gray-200">
      Edit
    </button>   
  </a>   
</td>
