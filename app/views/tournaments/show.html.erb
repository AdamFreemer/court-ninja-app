
  <div class="mx-auto">


  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-xl tracking-tight font-extrabold text-gray-900 sm:text-3xl md:text-4xl">
    <span class="block text-indigo-700 md:inline"><%= @tournament.name %></span>
  </h1>
  <h3 class="text-md tracking-tight font-extrabold text-gray-900 sm:text-2xl md:text-3xl">
    <span class="block text-indigo-400 sm:inline"><%= @tournament.city %>, <%= @tournament.state %></span>
  </h3>       
  <h4 class="text-sm tracking-tight font-regular text-gray-900 sm:text-2xl sm:text-3xl">
    <span class="text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Players: <%= @tournament.name %></span>
  </h4>    

  <% if true # @tournament.users.count == 7 %>
      <%= render "tournament_7", tournament: @tournament %>
  <% end %>

  <div class="flex float-right space-x-4">
    <%= link_to 'Back to Tournaments', tournaments_path, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", tab_index: 0 %>
    <%= link_to 'Update Scores', "#", id: "update-scores", class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
  </div>
</div>
