<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

<table class="table table-striped table-bordered" id="users">


  <tbody>
    <% @tournament.matches.each do |match| %>
      <tr>
        <td><%= match.teams.first.users.first.first_name %></td>
        <td><%= match.teams.first.users.second.first_name %></td>
        <td><%= match.teams.first.users.third.first_name %></td>
        <td>&nbsp;</td>
        <td><%= match.teams.second.users.first.first_name %></td>
        <td><%= match.teams.second.users.second.first_name %></td>
        <td><%= match.teams.second.users.third.first_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <%= link_to 'Edit this tournament', edit_tournament_path(@tournament), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this tournament', tournament_path(@tournament), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to tournaments', tournaments_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
