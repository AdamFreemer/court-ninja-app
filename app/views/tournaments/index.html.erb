<div data-controller="portal" class="mx-auto">
  <div class="pb-6 flex justify-between items-center">
    <h1 class="text-gray-500 text-3xl tracking-tighter items-center px-1 pt-1 font-bold">Tournament Management</h1>
      <div class="flex gap-2 items-center pb-1 flow-root py-1">
        <button 
          type="button" 
      class="float-right text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-md px-5 py-1 text-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          data-action="portal#newTournamentClick">Create Tournament
        </button>       

      </div>    
    <%# link_to 'New Player', new_user_path, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <div id="tournaments" class="min-w-full">
    <div class="flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <% if @tournaments.count == 0 %>
            <div class="py-4 text-center text-md font-medium tracking-tight leading-none text-gray-900 md:text-md lg:text-md">
              Such nothingness :( <br><br>Create a tournament and start having some fun!
            </div>
            <div class="py-4 text-center text-sm font-medium tracking-tight leading-none text-gray-900 md:text-md lg:text-md">
              <span class="text-gray-500">Create players first by <%= link_to "clicking here", players_path, class: "text-blue-500" %></span>
            </div>            
          <% else %>     
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">   
              <%= render "tournaments/tournaments_table" %> 
            </div>
          <% end %>    
        </div>
      </div>
    </div>
  </div>
</div>
