  <h4 class="text-sm tracking-tight font-extrabold text-gray-900 sm:text-2xl sm:text-3xl">
    <span class="text-gray-500 uppercase tracking-tighter">Court <%= matches.first.court %> : <%= name %></span>
  </h4>    
  
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
    <% team_count = [*1..tournament.matches.where(court: 1).first.teams.first.users.count] %>
      <tr>
        <th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-tighter">Match</th>
        <% team_count.each do |team_1| %>
          <th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-tighter">Player <%= team_1 %></th>
        <% end %>
        <th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-tighter">Team 1 Score</th>
        <% team_count.each do |team_2| %>
          <th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-tighter">Player <%= team_2 %></th>
        <% end %>
        <th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-tighter">Team 2 Score</th>
        <th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-tighter">Work Team</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% matches.each do |match| %>
        <% team1 = match.teams.first.users %>
        <% team2 = match.teams.second.users %>
        <% work_team = match.teams.last.users %>
        <tr>
          <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500"><%= match.number %></td>
          <% team1.each do |player| %>
            <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500"><%= player.name_abbreviated %></td>
          <% end %>
          <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500">
            <div class="mt-1 flex rounded-md shadow-sm">
              <% team_1 = match.teams.find_by(number: 1) %>
              <% team_2 = match.teams.find_by(number: 2) %>
              <input 
                type="text" 
                name="<%= "team-#{team_1.id}" %>" 
                id="<%= team_1.id %>" 
                class="flex-1 block w-full px-2 py-2 rounded-l-md rounded-r-md focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300" 
                value="<%= team_1.score %>"
                <%# @tournament.round_1_finalized ? "disabled" : "" %>
              >
            </div>
          </td>         
          <% team2.each do |player| %>
            <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500"><%= player.name_abbreviated %></td>
          <% end %>                         
      
          <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500">
            <div class="mt-1 flex rounded-md shadow-sm">
              <input 
                type="text" 
                name="<%= "team-#{team_2.id}" %>" 
                id="<%= team_2.id %>" 
                class="flex-1 block w-full px-2 py-2 rounded-l-md rounded-r-md focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300" 
                value="<%= team_2.score %>"
                <%# @tournament.round_1_finalized ? "disabled" : "" %>
              >
            </div>
          </td> 
          <% work_team.each do |player| %>
            <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500"><%= player.first_name.capitalize %> <%= player.last_name[0].capitalize %></td>
          <% end %>                                      
        </tr>
      <% end %>
    </tbody>
  </table>