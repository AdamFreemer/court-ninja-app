<div class="flex min-h-full">
  <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96 mt-12">
      <div class="pb-6">
        <h1 class="text-center text-gray-500 text-4xl tracking-tighter font-bold">Court Ninja</h1>
      </div>

      <div class="mt-8">
        <h2 class="text-2xl/9 font-bold tracking-tight text-gray-900">Sign in to your account</h2>
        <p class="mt-2 text-sm/6 text-gray-500">
          Not registered yet?
          <%= link_to "Create an account", new_user_registration_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>

      <div class="mt-10">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <%= render 'layouts/alerts' %>

          <% if @from_stripe %>
            <%= hidden_field_tag :from_stripe, true %>
          <% end %>

          <div>
            <%= f.label :email, class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= f.email_field :email, autofocus: true,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
            </div>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= f.password_field :password, autocomplete: "current-password",
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
            </div>
          </div>

          <div class="flex items-center justify-between">


            <div class="text-sm/6">
              <%= link_to "Forgot your password?", new_password_path(resource_name), 
                  class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
            </div>
          </div>

          <div>
            <%= f.submit "Sign in", 
                class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </div>

          <div class="flex justify-center mt-6">
            <%= recaptcha_tags %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="relative hidden w-0 flex-1 lg:block">
    <%= image_tag "sign-up.jpg", 
        class: "absolute inset-0 size-full object-cover",
        alt: "Sign in" %>
  </div>
</div>


