<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
  
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>  
  


<div class="mx-auto" data-controller="users">
  <div class="pb-6 flex justify-between items-center">
    <h1 class="text-gray-500 text-3xl tracking-tighter items-center pt-1 font-bold"><%= @title %></h1>   
    <%# link_to 'New Player', new_user_path, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
  <% if @players.count == 0 %>
    <div class="text-center text-md font-medium tracking-tight leading-none text-gray-900 md:text-md lg:text-md">
      Such nothingness. Add some players to your leaderboard!
    </div>
  <% end %>
  <%= render "leaderboard_table", players: @players  %>

</div>

<script>
  $(document).ready(function() {
    $('#leaderboard').DataTable( {
      "columnDefs": [
        { 'orderable': false, 'targets': [0] }
      ]
    });
  });
</script> 