<div class="mx-auto" data-controller="users">
  <div class="pb-6 flex justify-between items-center">
    <h1 class="font-semibold text-3xl"><%= @title %></h1>
      <div class="flex gap-2 items-center pb-1 flow-root">
        <button 
          type="button" 
          class="float-right text-white bg-red-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-md px-5 py-1 text-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          data-action="users#newOneOffPlayer">Add One Off Player
        </button>       
        <button 
          type="button" 
          class="float-right text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-md px-5 py-1 text-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          data-action="users#newTeamPlayer">Add Team Player
        </button> 
      </div>    
    <%# link_to 'New Player', new_user_path, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
  <% if @players_one_off.count + @players_team.count == 0 %>
    <div class="text-center text-md font-medium tracking-tight leading-none text-gray-900 md:text-md lg:text-md">
      Such nothingness. Add some players to your team!
    </div>
  <% end %>
  <%= render "players_table", players: @players_one_off, type: "one_off" %>
  <%= render "players_table", players: @players_team, type: "team" %>
</div>
